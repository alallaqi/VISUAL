{
  "name": "wildlife-narration-web-app",
  "version": "1.0.0",
  "description": "A web-based proof-of-concept for real-time narration of animal behavior from live YouTube animal streams, designed for visually impaired users.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,yellow\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && (source venv/bin/activate 2>/dev/null || true) && python3 run.py",
    "dev:frontend-only": "vite",
    "dev:backend-only": "cd backend && (source venv/bin/activate 2>/dev/null || true) && python3 run.py",
    "setup": "./setup.sh",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write src/**/*.{ts,js,html,css}",
    "type-check": "tsc --noEmit",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch"
  },
  "keywords": [
    "accessibility",
    "wildlife",
    "narration",
    "lit",
    "web-components",
    "ai",
    "tts",
    "screen-reader",
    "wcag"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@lit/context": "^1.1.0",
    "@lit/localize": "^0.12.0",
    "@lit/task": "^1.0.0",
    "hls.js": "^1.6.5",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-lit": "^1.10.1",
    "eslint-plugin-lit-a11y": "^4.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-checker": "^0.6.2"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}
